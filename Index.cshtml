    <style>
        :root {
            --primary: #0b63d6;
            --accent: #1abc9c;
            --card: #fff;
            --muted: #64748b;
            --star: #fbbf24;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins",Arial,sans-serif
        }

        body {
            background: #f8fafc;
            color: #1e293b;
            line-height: 1.6
        }

        a {
            text-decoration: none;
            color: inherit
        }

        img {
            max-width: 100%;
            display: block;
            border-radius: 8px
        }

        /* NAV */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 18px 40px;
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05)
        }

        .logo {
            font-weight: 800;
            font-size: 22px;
            color: var(--primary)
        }

        .main-menu {
            display: flex;
            gap: 24px;
            list-style: none
        }

            .main-menu li a {
                font-weight: 600;
                color: #1e293b;
                transition: .3s
            }

                .main-menu li a:hover {
                    color: var(--primary)
                }

        .menu-toggle {
            display: none;
            cursor: pointer;
            font-size: 22px
        }
        @@media(max - width:768px) {
            .main-menu

        {
            display: none
        }

        .menu-toggle {
            display: block
        }

        }

        /* HERO SLIDER */
        .hero {
            min-height: 72vh;
            position: relative;
            overflow: hidden;
            color: #fff
        }

        .hero-slide {
            position: absolute;
            inset: 0;
            opacity: 0;
            transition: opacity 1s ease-in-out;
            background-size: cover;
            background-position: center
        }

            .hero-slide.active {
                opacity: 1
            }

        .hero .overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg,rgba(6,30,77,0.55),rgba(6,30,77,0.35))
        }

        .hero .content {
            position: relative;
            z-index: 2;
            padding: 80px 20px;
            text-align: center
        }

        .hero h1 {
            font-size: 44px;
            margin-bottom: 12px
        }

        .lead {
            color: rgba(255,255,255,0.9);
            max-width: 720px;
            margin: auto
        }

        .hero .actions {
            margin-top: 18px;
            display: flex;
            gap: 12px;
            justify-content: center
        }

        .btn {
            display: inline-block;
            padding: 10px 18px;
            border-radius: 10px;
            background: var(--primary);
            color: #fff;
            font-weight: 600;
            transition: .3s
        }

            .btn:hover {
                background: #0947a8
            }

        /* SECTION */
        .section {
            padding: 70px 20px
        }

            .section h2 {
                text-align: center;
                margin-bottom: 24px;
                font-size: 28px;
                color: #0f172a
            }

        /* Services */
        .card-grid {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 20px
        }

        .card {
            background: var(--card);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(11,99,214,0.06);
            text-align: center;
            transition: .3s
        }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.08)
            }

        .service-icon {
            width: 64px;
            height: 64px;
            border-radius: 12px;
            background: linear-gradient(135deg,var(--primary),var(--accent));
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 24px;
            margin: 0 auto 10px
        }

        .card a {
            display: inline-block;
            margin-top: 10px;
            color: var(--primary);
            font-weight: 600
        }
        @@media(max - width:1000px) {
